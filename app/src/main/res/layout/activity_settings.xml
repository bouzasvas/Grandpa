<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hci.aueb.com.grandpa.settings"
    android:background="#4A86E8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ρυθμίσεις"
            android:id="@+id/settings_text"
            android:layout_below="@+id/settings_layout"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#050000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/seperator" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contacts_settings_layout"
        android:layout_below="@+id/settings_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ρυθμίσεις Επαφών"
            android:id="@+id/contactsSettings_title"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_below="@+id/seperator2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Προσθήκη Νέας Επαφής"
            android:id="@+id/add_new_contact_button"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_below="@+id/contactsSettings_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:onClick="createContactOnclick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ορισμός Αγαπημένων Επαφών"
            android:id="@+id/favourite_contact_button"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_below="@+id/add_new_contact_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="selectFavContacts" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#050000"
        android:id="@+id/seperator2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seperator2"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ρυθμίσεις Έκτακτης Ανάγκης"
            android:id="@+id/sos_settings_title"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ρυθμίσεις Κουμπιού Έκτακτης Ανάγκης"
            android:id="@+id/sos_settings_button"
            android:textSize="30sp"
            android:layout_below="@+id/sos_settings_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="sosButtonSettingsClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ορισμός Έτοιμου μηνύματος προς αποστολή"
            android:id="@+id/button2"
            android:textSize="30sp"
            android:layout_below="@+id/sos_settings_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="defineSosMsg" />
    </RelativeLayout>

</RelativeLayout>
